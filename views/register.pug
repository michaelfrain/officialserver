doctype html
html(lang='en')
 head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  meta(name='description', content='Signup page for the SCIAC portal')
  meta(name='author', content='Michael Frain, Jr.')
  title Register to use the SCIAC portal
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
  link(rel='stylesheet', href='./stylesheets/signup.css')
 body
  .container
   form.form-signup(action='register', method='post')
    h2.form-signup-heading Register
     label.sr-only(for='inputEmail') Email address
     input#inputEmail.form-control(type='email', placeholder='Email address', name='username', required='', autofocus='')
     label.sr-only(for='inputPassword') Password
     input#imputPassword.form-control(type='password', placeholder='Password', name='password', required='')
     label.sr-only(for='inputRepeatPassword') Repeat password
     input#inputPassword.form-control(type='password', placeholder='Repeat password', required='')
     label.sr-only(for='inputFirstName') First name
     input#inputFirstName.form-control(type='text', placeholder='First name', name='firstName', required='')
     label.sr-only(for='inputLastName') Last name
     input#inputLastName.form-control(type='text', placeholder='Last name', name='lastName', required='')
     button.btn.btn-lg.btn-primary.btn-block(type='submit') Register
   script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
   script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')