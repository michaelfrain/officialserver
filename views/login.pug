  body
   .container
    form.form-signin()
     h2.form-signin-heading Welcome to the SCIAC Officials Portal
     label.sr-only(for='inputEmail') E-mail address
     input#inputEmail.form-control(type='email', placeholder='E-mail address', name='username', autofocus='')
     label.sr-only(for='inputPassword') Password
     input#inputPassword.form-control(type='password', placeholder='Password', name='password')
     .checkbox
      label
       input(type='checkbox', value='remember-me')
       p Remember me
     button.btn.btn-lg.btn-primary.btn-block(type='submit' formaction='/api/login' formmethod='post') Sign in
    form.form-signin()
     button.btn.btn-lg.btn-primary.btn-block(type='submit' formaction='/register' formmethod='get') Register
